{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "module": "ES2015",
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  }
}
